@model IS_BartenderAppProject_MV.Models.Drink

@{
    ViewData["Title"] = "Create";
    var title = "Add Drink";
}



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upsert">
            @if (Model.DrinkId != 0)
            {
                title = "Edit Existing Drink From Menu";
            }
            <h2>@title</h2>
            <input type="hidden" asp-for="DrinkId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrinkName" class="control-label"></label>
                <input asp-for="DrinkName" class="form-control" />
                <span asp-validation-for="DrinkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkCost" class="control-label"></label>
                <input asp-for="DrinkCost" class="form-control" />
                <span asp-validation-for="DrinkCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
