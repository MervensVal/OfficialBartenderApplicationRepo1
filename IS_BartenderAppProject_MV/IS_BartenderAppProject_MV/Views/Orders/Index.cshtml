@model IEnumerable<IS_BartenderAppProject_MV.Models.Order>
@{
    ViewData["Title"] = "Index";
}

<h1>Orders Placed</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrinkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <div class="btn btn-danger">
                    <a class="nav-link text-white"asp-action="Edit" asp-route-id="@item.OrderId">Edit</a>
                </div>
                <div class="btn btn-primary">
                    <a class="nav-link text-white"asp-action="Details" asp-route-id="@item.OrderId">Details</a>
                </div>
                <div class="btn btn-success">
                    <a class="nav-link text-white"asp-action="Delete" asp-route-id="@item.OrderId">Order Completed</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
